{
  "root": true,
  "extends": ["plugin:prettier/recommended", "plugin:tailwindcss/recommended"],
  "plugins": ["tailwindcss"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2021": true
  }
}
